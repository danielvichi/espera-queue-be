{
  "name": "espera-queue-be",
  "version": "0.0.1",
  "description": "",
  "author": "danielvichi@gmail.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "npm run prisma:generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test npm run docker:test:up && npm run prisma:generate && dotenv -e .env.test prisma migrate deploy && jest --runInBand --updateSnapshot",
    "test:ci": "NODE_ENV_IS_CI=true NODE_ENV=test npm ci --force && npm run prisma:generate && dotenv -e .env.test-ci npx prisma migrate deploy && NODE_OPTIONS=--max-old-space-size=3000 jest --runInBand",
    "docker:dev:up": "docker compose up db_local -d",
    "docker:dev:down": "docker compose down db_local",
    "docker:test:up": "docker compose up db_test -d --force-recreate --no-deps",
    "docker:test:down": "docker compose down db_test",
    "docker:test-ci:up": "docker compose up espera_queue_local_test_db_ci -d --force-recreate --no-deps",
    "docker:test-ci:down": "docker compose down espera_queue_local_test_db_ci",
    "migrate:dev": "dotenv -e .env.dev npx prisma migrate dev",
    "migrate:test": "dotenv -e .env.test npx prisma migrate dev",
    "migrate:staging:ci": "dotenv -e .env.test-ci npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.16.2",
    "dotenv": "^17.2.2",
    "http": "^0.0.1-security",
    "luxon": "^3.7.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.2.1",
    "prettier": "^3.4.2",
    "prisma": "^6.16.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupFiles": [
      "<rootDir>/test/setup-jest.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "prettierPath": null
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
